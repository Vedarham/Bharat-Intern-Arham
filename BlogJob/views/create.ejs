<body>
    
<div class="profile-layer">
    <div class="create-det">
        <a href="/profile">Back</a>
        <h2>Create New Post</h2>
    </div>
            <div class="form-cont">
                <form action="/post" method="post" enctype="multipart/form-data">
                    <input name="postintro" type="text" placeholder="Add Introduction for Users">
                    <input name="posttitle" type="text" placeholder="Add a suitable title">
                    <input type="file" name="postpic" />
                    <textarea rows="10"  name="postdata" placeholder="What's in your Mind? Spill to Shock..." ></textarea>
                    <input class="button" value="Create Post" type="submit">
                </form>
            </div>
</div>
