<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home||BlogJob</title>
    <link rel="stylesheet" href="/style/style-home.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
   </head>
<body>
    <nav>
        <div class="image">
            <a href="/home"><img src="/images/BlogJob-logo.png" alt=""></a>
        </div>
        <ul>
            <li><a href="/explore">Explore</a></li>
            <li><a href="/landing">Contact Us</a></li>
            <li><a href="/profile">Profile</a></li>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </nav>
    <section class="hero">
        <div class="bg-image">
            <img src="" alt="">
        </div>
        <h1>Welcome To BlogJob</h1>
        <h4>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quam, voluptatum!</h4>
        <a href="/create" class="button">Get Started</a>
    </section>
    <section class="explore">
        <% user.posts.reverse().forEach(function(post){%>
        <div class="blog-cont">
            <div class="blog">
                <div class="sub-conts">
                    <div class="sub-cont-1">
                        <h3><%=post.posttitle %></h3>
                    <a href="">@<%=user.username%></a>
                </div>
                <div class="sub-cont-2">
                    <p><%=post.postintro %></p>
                    <div class="post-interaction">
                        <small></small>
                        <a href="/Like/<%= post._id %>"><%=post.postlikes.indexOf(user._id)===-1?"Like":"Unlike"%></a>
                       <a href="">share</a> 
                    </div>
                </div>
                </div>
                <div class="blog-img">
                    <img src="/images/uploads/<%= post.postpic %>" alt="">
                </div>
            </div>
        </div>
        <% }) %>
    </section>
</body>
</html>